<div id="newEventPage" class="container pt-3 mt-3">
  <div id="pageHeader" class="row">
    <h1>Post a time to host live video Conversation</h1>
    <p>
      By entering a time for a Conversation below, your Mentor Hour will be posted on our home page schedule. 
    </p>
  </div>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved: .</h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <%= form_for @event do |f| %>
      <%= render "events/form", f: f, event: @event %>

      <%= f.submit "Post Conversation", class: "btn btn-lg btn-primary create-event-btn", id: "eventSubmit" %>
    <% end %>
  </div>
</div>

